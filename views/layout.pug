doctype html

include ./mixins.pug

html(lang='pt-br')
	head
		if title
			title #{title} - Observatório das Eleições - Resocie/UNB
		else
			title Observatório das Eleições - Resocie/UNB

		link(rel="icon", href="/imagens/Icon.png")

		link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Comfortaa:400,700")
		link(rel="stylesheet", href="/bower_components/bootstrap/dist/css/bootstrap.css")
		link(rel="stylesheet", href="/bower_components/custom/css/custom.css")

		script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js", integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo", crossorigin="anonymous")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js", integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49", crossorigin="anonymous")
		script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js", integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T", crossorigin="anonymous")
		script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")

		script(src="/bower_components/custom/js/plot.ctrl.js")

	body
		nav.navbar.sticky-top.navbar-expand-lg.navbar-light.bg-green
			.container
				a.navbar-brand(href="/")
						img(src="/imagens/Logo.png", alt="Logotipo do Observatório", width="220")
				button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation", min-width="50")
					span.navbar-toggler-icon
				#navbarNav.collapse.navbar-collapse.justify-content-center
					ul.navbar-nav
						li.nav-item
							a.nav-link(href="/portal/quemsomos")
								| Quem Somos
						li.nav-item
							a.nav-link(href="/portal/flexibilidades")
								| Flexibilidades
						li.nav-item
							a.nav-link(href="/portal/espacoExploratorio")
								| Espaço Exploratório

		.container
			block content
			br

		footer.justify-content-center
			p Observatório das Eleições é um projeto do 
				//a(href="https://resocie.org") Resocie
				+insertLink("https://resocie.org", "Resocie")
			p © 2018 - Todos os direitos reservados
			p Design pelo grupo 
				+insertLink("/portal/quemsomos#dataviz", "Data-Viz")
